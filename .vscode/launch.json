    "version": "0.2.0",
    "configurations": [
        {
            "type": "zshdb",
            "request": "launch",
            "name": "Zsh-Debug (hardcoded script name)",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/Print-GRDPFile.sh",
            "args": ["-i", "Test2.grdp"]
        },
        {
            "name": "PowerShell: Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",        
            "args": ["-Verb RunAs"]
        }
    ]
}